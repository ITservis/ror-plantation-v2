<%= simple_form_for([:subject, @template]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title %>
    </div>

    <div class="form-inputs">
      <%= f.association :questions %>
    </div>

    <div class="form-actions">
      <%= f.button :magic_submit, cancel: subject_path(@subject) %>
    </div>
<% end %>
