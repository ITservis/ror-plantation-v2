<h1>Study programs</h1>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Title</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @study_programs.each do |study_program| %>
      <tr>
        <td><%= study_program.title %></td>
        <td><%= link_to 'Edit', edit_admin_study_program_path(study_program), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', [:admin, study_program], class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to new_admin_study_program_path, class: 'btn btn-success' do %>
    <%= fa_icon 'plus', text: 'New Study Program' %>
<% end %>
